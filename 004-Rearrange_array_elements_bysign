class Solution {
public:
    vector<int> rearrangeArray(vector<int>& nums) {
       int n = nums.size();
       vector <int> ans(n,0);
       int i;
       int j=0;int k =1;
       for (i=0;i<n;i++){
            if(nums[i]>=0){
                ans[j]=nums[i];
                j=j+2;
            }
            else{
                ans[k]=nums[i];
                k=k+2;
            }
       }  
       return ans; 
    }
};
TC - 0ms
SC - 128.16 MB
